  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      // attach: O debug se conecta à aplicação já iniciada
      // laucnch: O debug inicia a aplicação debugando
      "request": "attach",
      "protocol": "inspector",
      "restart": true,
      "name": "Debug node",
      "skipFiles": ["<node_internals>/**"],
      // "program": "${workspaceFolder}\\backend\\src\\routes\\index.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
